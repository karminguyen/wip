bundle agent set_timezone {
files:

    "/etc/default/timezone"
        copy_from => local_cp("$(config_input_dir)/generic-server/etc/timezone"),
        perms        => system;

commands:

    any::
        "sudo sh -c 'dpkg-reconfigure -f noninteractive tzdata'";

}

